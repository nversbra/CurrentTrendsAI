import csv
import itertools
import random

#n_readouts =['n_readouts']
n_components =[]
damping =[]
weight_scaling =[]
#discard_steps =['']

i=0
for i in range(0,1000):
    n_components.append(random.randrange(50,200,1))
    damping.append(random.uniform(0, 1 ))
    weight_scaling.append(random.uniform(0, 2))

parameters = open('parameters.txt', 'wb')
mywriter= csv.writer(parameters)
for row in zip(n_components,damping,weight_scaling):
    mywriter.writerows([row])
parameters.close()